<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="AsyncTracer.MainWindow"
        Title="Control Flow Trace" Height="350" Width="592">
    <Grid>
        <Button x:Name="startButton" Click="startButton_Click" Content="Start" HorizontalAlignment="Left" Margin="93,10,0,0" VerticalAlignment="Top" Width="75" Height="24" />
        <TextBox x:Name="resultsTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="576" Height="265" FontFamily="Lucida Console" FontSize="10" VerticalScrollBarVisibility="Visible" Grid.ColumnSpan="3"/>
        <Button x:Name="exceptionButton" Content="Exception" HorizontalAlignment="Left" Margin="243,11,0,0" VerticalAlignment="Top" Width="75" Click="exceptionButton_Click"/>
        <Button x:Name="multiException" Content="MultiException" HorizontalAlignment="Left" Margin="392,11,0,0" VerticalAlignment="Top" Width="75" Click="multiException_Click"/>
    </Grid>
</Window>
